@model IEnumerable< D.Models.Оформление_заказа>
@using D.Models
@{
    ViewBag.Title = "Детали заказа";
}


<div>
    <h2>Заказ №@ViewBag.ID</h2>
    <hr />

    <dl class="dl-horizontal">
       

        <dt>
            Дата заказа:
        </dt>

        <dd>
            @ViewBag.Date
        </dd>

        <dt>
           Клиент:
        </dt>

        <dd>
            @ViewBag.Client
        </dd>

        <dt>
            Ответственный:
        </dt>

        <dd>
            @ViewBag.Employee
        </dd>

        

    </dl>
    <div class="test-border" >
        <table class="table-bordered table-striped det1">
            <thead>
                <tr>
                    <th>@Html.DisplayNameFor(modelItem => modelItem.Товар.Обозначение)</th>
                    <th>@Html.DisplayNameFor(modelItem => modelItem.Товар.Наименование)</th>
                    <th>@Html.DisplayNameFor(modelItem => modelItem.Товар.Единица_измерения)</th>
                    <th>@Html.DisplayNameFor(modelItem => modelItem.Количество)</th>
                    <th>@Html.DisplayNameFor(modelItem => modelItem.Товар.Цена)</th>
                    <th>@Html.DisplayNameFor(modelItem => modelItem.Товар.Цена_с_НДС)</th>

                </tr>
            </thead>
            <tbody>
                @foreach (Оформление_заказа p in Model)
            {
                    <tr>
                        <td>
                            <strong> @Html.DisplayTextFor(modelItem => p.Товар.Обозначение)</strong>
                        </td>
                        <td>
                            <strong>@Html.DisplayTextFor(modelItem => p.Товар.Наименование)</strong>
                        </td>
                        <td>
                            <strong>@Html.DisplayTextFor(modelItem => p.Товар.Единица_измерения)</strong>
                        </td>
                        <td>
                            <strong>@Html.DisplayTextFor(modelItem => p.Количество)</strong>
                        </td>
                        <td>
                            <strong>@Html.DisplayFor(modelItem => p.Товар.Цена)</strong>
                        </td>
                        <td>
                            <strong>@Html.DisplayFor(modelItem => p.Товар.Цена_с_НДС)</strong>
                        </td>

                    </tr>
                  

                }
                <tr><td></td><td></td><td></td><td></td><td><strong>Итого:</strong></td><td><strong>@ViewBag.Amount</strong></td></tr>

            </tbody>
        </table>
        </div>

    </div>

