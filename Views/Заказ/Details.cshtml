<div class="test-border tprovider">
    <table class="table-bordered table-striped det dontPrint">
        <thead>
            <tr><th colspan="5">Связанные поступления</th></tr>
            <tr>
                <th>Номер</th>
                <th>Дата</th>

                <th>Клиент</th>
                <th>Сумма </th>
                <th></th>
            </tr>


        </thead>
        <tbody>
            @foreach (Оплата_заказа i in ViewBag.list)
            {
                <tr>
                    <td>@Html.DisplayName(i.ID_поступления.ToString())</td>
                    <td>@i.Денежное_поступление.Дата_поступления.Value.ToShortDateString()</td>
                    <td>@Html.DisplayName(i.Денежное_поступление.Клиент.Название_организации)</td>
                    <td>@Html.DisplayName(i.Сумма.Value.ToString("0.00"))</td>
                    
                   
                    <td>
                        @using (Html.BeginForm("DeleteP", "Заказ", new { id = i.ID_заказа, p = i.ID_поступления }, FormMethod.Post))
                        {
                            <input type="image" src="~/Content/png/error.png" />
                        }
                    </td>
  
                </tr>
            }
        </tbody>
    </table>
</div>
    } }


