                <col width="35%">
                <col>
            </colgroup>
            <thead>
                <tr>

                    <th class="text-center">
                        @Html.DisplayNameFor(model => model.OrderID)
                    </th>
                    <th class="text-center">
                        @Html.DisplayNameFor(model => model.OrderDate)
                    </th>
                    <th class="text-center">
                        @Html.DisplayName("Клиент")
                    </th>
                    <th class="text-center">
                        @Html.DisplayNameFor(model => model.AmountVat)
                    </th>
                    <th class="text-center">
