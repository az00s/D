        @Html.Partial("_SideMenuOrder")





    </div>

    <div id="dvForTable" class="col-lg-9 col-lg-offset-0">


        <table class="table-bordered table-striped table-hover table table-condensed" id="tbOrders">
            <colgroup>
                <col width="15%">
