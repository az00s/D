@model D.Models.Денежное_поступление

@{
    ViewBag.Title = "Новое поступление";
}

<h2>Новое денежное поступление</h2>


@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        <div class="form-group">
            @Html.LabelFor(model => model.Дата_поступления, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10 input-group date" id="datetimepicker1">
                <span class="input-group-addon">
                    <span class="glyphicon-calendar glyphicon"></span>
                </span>
                @Html.TextBoxFor(model => model.Дата_поступления, new { @class = "form-control", @readonly = "readonly" })
                @Html.ValidationMessageFor(model => model.Дата_поступления, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.ID_клиента, "Клиент", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                <div class="indoorBtnDiv">
                    <input data-val="true" data-val-number="The field ID_клиента must be a number." data-val-required="Требуется поле ID_клиента." id="ID_клиента" name="ID_клиента" type="hidden" />
                    <input id="indoorText" data-val="true" data-val-required="Требуется поле" name="Название организации" type="text" value="" readonly required/>
                    <input type="button" class="indoorBtn" id="btnAddClient" value="+">
                </div>
                @*@Html.DropDownList("ID_клиента", null, htmlAttributes: new { @class = "form-control" })*@
                @Html.ValidationMessageFor(model => model.ID_клиента, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.Сумма, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Сумма, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Сумма, "", new { @class = "text-danger" })
            </div>
        </div>

        

        

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Добавить поступление" class="btn btn-success" />
            </div>
        </div>
    </div>
}

<div id="popupClients" class="popupContact">
    <a id="popupClientsClose" class="popupContactClose">x</a>

    @Html.Action("AllClients")
    <input type="submit" id="sidebtnC" class="sideButton" value="+" />

</div>
<div id="backgroundPopup" class="backgroundPopup"></div>

@section Scripts {
    @Scripts.Render("~/bundles/popupCreateOrders")

<script type="text/javascript" src="/Scripts/moment-with-locales.min.js"></script>
<script type="text/javascript" src="/Scripts/bootstrap.min.js"></script>
<script type="text/javascript" src="/Scripts/bootstrap-datetimepicker.min.js"></script>
<link rel="stylesheet" href="/Content/bootstrap.min.css" />
<link rel="stylesheet" href="/Content/bootstrap-datetimepicker.min.css" />
}







