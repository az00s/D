                    </th>
                    <th>@Html.ActionLink("УНП клиента", "Index", new { sort = ViewBag.UnpSortParm }, new { @class = "Theader" })</th>
                    <th>
                        @Html.ActionLink("Название организации", "Index", new { sort = ViewBag.NameSortParm }, new { @class = "Theader" })
                    </th>
                    <th>
                        @Html.ActionLink("Сумма", "Index", new { sort = ViewBag.AmountSortParm }, new { @class = "Theader" })
                    </th>

