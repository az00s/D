<div id="table">
    <div class="test-border" style="display:@ViewBag.b">
        <table class="table-bordered table-striped table-hover">
            <thead>
                <tr>
                    <th>
                        @Html.ActionLink("Номер", "Index", new { sort = ViewBag.NumSortParm }, new { @class = "Theader" })
