<div id="table">
    <div class="test-border" style="display:@ViewBag.b">
        <table class="table-bordered table-striped">
            <thead>
                <tr>

                    <th>
                        @Html.ActionLink("УНП клиента", "Index", new { sort = ViewBag.UnpSortParm }, new { @class = "Theader" })
