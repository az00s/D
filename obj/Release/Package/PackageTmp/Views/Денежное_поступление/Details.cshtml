@model IEnumerable <D.Models.Оплата_заказа>
    @using D.Models

@{
    ViewBag.Title = "Информация о поступлении";
}

<h2>Информация о поступлении</h2>

<div>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            Клиент:
        </dt>

        <dd>
            @ViewBag.p.Клиент.Название_организации
        </dd>

        <dt>
            Сумма
        </dt>

        <dd>
            @ViewBag.p.Сумма.ToString("0.00")
        </dd>

        <dt>
            Дата поступления:
        </dt>

        <dd>
            @{string str = ViewBag.p.Дата_поступления != null ? ViewBag.p.Дата_поступления.ToString("dd.MM.yyyy") : "";
            }
            @str
        </dd>

    </dl>
</div>

<p>@Html.ActionLink("Редактировать", "Edit", new { id = @ViewBag.p.ID_поступления }, new { @class = "btn btn-info dontPrint", @style = "margin-top:20px;margin-left:170px;" }) </p>
<p>@Html.ActionLink("Связать поступление с заказом", "AddM", new { id=@ViewBag.p.ID_поступления }, new { @class = "btn btn-info dontPrint", @style = "margin-top:0px;margin-left:170px;" }) </p>
<br />   
