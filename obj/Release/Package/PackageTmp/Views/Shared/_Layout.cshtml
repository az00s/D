<!DOCTYPE html>
<html lang="ru">
<head>
    @*<link rel="stylesheet"
          href="https://cdn.jsdelivr.net/npm/animate.css@3.5.2/animate.min.css">*@
    <link rel="manifest" href="/manifest.json">
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title </title>
    @Styles.Render("~/Content/css")
    @RenderSection("Styles", false)
    <link href="//maxcdn.bootstrapcdn.com/font-awesome/4.5.0/css/font-awesome.min.css" rel="stylesheet">
    <script src="~/Scripts/jquery-1.11.1.min.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
    @RenderSection("scripts", false)
  
    <meta name="description" content="Автоматизированная система учета автозапчастей" />
</head>
<body>
        <div class="navbar navbar-default navbar-static-top pulsate-bg">
            <div class="container">
                <div class="navbar-header">
                    <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                    </button>
                    @Html.ActionLink("Главная", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
                </div>
                <div class="navbar-collapse collapse">
                    <ul class="nav navbar-nav navbar-left">
                        <li>@Html.ActionLink("Товары", "Index", "Product")</li>
                        <li class="dropdown">
                            <a data-toggle="dropdown" class="dropdown-toggle" href="#">Клиенты <b class="caret"></b></a>
                            <ul role="menu" class="dropdown-menu">
                                <li>@Html.ActionLink("Юридические лица", "Index", "CustomerEnt")</li>
                                <li>@Html.ActionLink("Физические лица", "Index", "CustomerInd")</li>
                            </ul>
                        </li>
                        <li>@Html.ActionLink("Заказы", "Index", "Order")</li>
                        <li>@Html.ActionLink("Поставщики", "Index", "Supplier")</li>
                        <li>@Html.ActionLink("Денежные поступления", "Index", "MoneyReceipt")</li>
                        <li>@Html.ActionLink("Сотрудники", "Index", "Employee")</li>
                    </ul>
                    @Html.Partial("_LoginPartial")
                </div>
            </div>
        </div>
    
    <div class="container-fluid body-content" id="body">
        @RenderBody()
    </div>
    <div class="container footer dontPrint">
        <hr />
        <footer >
            <p>&copy; К. Ю., @DateTime.Now.Year </p>
        </footer>
    </div>

    <script>

        function testAnim(x) {
            $('footer').removeClass().addClass(x + ' animated').one('webkitAnimationEnd mozAnimationEnd MSAnimationEnd oanimationend animationend', function () {
                $(this).removeClass();
            });
        };

        $(document).ready(function () {
            $('footer').click(function (e) {
               
                var anim = "rubberBand";
                testAnim(anim);
            });

           
        });


        
       
    </script>
</body>
</html>
