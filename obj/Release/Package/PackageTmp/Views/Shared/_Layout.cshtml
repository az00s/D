<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title </title>
    
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    
    @Scripts.Render("~/bundles/jqueryval")
    @Scripts.Render("~/bundles/jquery-ui")
    @Scripts.Render("~/bundles/myScripts")

    @*<script src="~/Scripts/jquery-3.1.1.min.js"></script>*@
    <script src="~/Scripts/jquery.unobtrusive-ajax.min.js"></script>
    

    <meta name="description" content="Автоматизированная система учета автозапчастей" />
    @RenderSection("scripts", false)
</head>
<body>
    
    <div class="navbar navbar-inverse navbar-fixed-top dontPrint">
        <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#sidebar-menu" id="left-collapse-button">
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
        </button>
        <div class="container">

            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Главная", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("Товары", "Index", "Товар")</li>
                    <li>@Html.ActionLink("Клиенты", "Index", "Клиент")</li>
                    <li>@Html.ActionLink("Заказы", "Index", "Заказ")</li>
                    <li>@Html.ActionLink("Поставщики", "Index", "Поставщик")</li>
                    <li>@Html.ActionLink("Денежные поступления", "Index", "Денежное_поступление")</li>
                    <li>@Html.ActionLink("Сотрудники", "Index", "Сотрудник")</li>
                </ul>
                @Html.Partial("_LoginPartial")
            </div>
        </div>
    </div>
    <div class="container body-content">
        @*<div class="wrapper">*@
        @RenderBody()
        @*</div>*@

        <div class="container footer dontPrint">
            <hr />
            <footer>
                <p>&copy; К. Ю. Зинькевич, @DateTime.Now.Year @*Зинькевич Константин*@</p>
            </footer>
        </div>
    </div>


    @*@RenderSection("scripts", required: false)*@
</body>
</html>
