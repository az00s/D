@model IEnumerable<D.Models.Order>


@using D.Models

        @foreach (Order p in Model)
        {
            <tr>
                <td><strong>@Html.DisplayTextFor(modelItem => p.OrderID)</strong></td>
                <td>
                    <strong>@Html.HiddenFor(modelItem => p.OrderID) @p.OrderDate.Value.ToShortDateString()</strong>
                    </td>
                <td>
                    <strong> @{string CustomerName = p.CustomerEnt == null?p.CustomerInd.LastName + " " + p.CustomerInd.FirstName:p.CustomerEnt.Name;}@CustomerName</strong>
                </td>
                
                <td><strong>@Html.DisplayTextFor(modelItem => p.AmountVat)</strong></td>

            </tr>

        }
    

