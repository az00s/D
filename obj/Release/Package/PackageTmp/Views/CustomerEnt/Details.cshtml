@model D.Models.CustomerEnt

@{
    ViewBag.Title = "О клиенте";
}


<div class="container">
    <ol class="breadcrumb">
        <li><a href="@Url.Action("Index","Home")">Главная</a></li>
        <li><a href="@Url.Action("Index","CustomerEnt")">Юридические лица</a></li>
        <li class="active">Карточка клиента</li>

    </ol>

    <div class="well bs-component">
        <div class="row">
            <div class="col-xs-12 col-lg-12">

                <fieldset>
                    <legend>
                        <ul class="nav">
                            <li class="">
                                <a data-toggle="dropdown" class="dropdown-toggle" style="color:black;">Карточка клиента  <span class="caret"></span></a>
                                <ul class="dropdown-menu">
                                    <li><a href="#EditModal" data-toggle="modal"> Редактировать</a> </li>
                                    <li><a href="#DeleteModal" data-toggle="modal">Удалить</a></li>
                                </ul>
                            </li>
                        </ul>
                    </legend>


                    <div>

                        <dl class="dl-horizontal">

                            <dt>
                                @Html.DisplayNameFor(model => model.ClientPAN)
                            </dt>

                            <dd>
                                @Html.DisplayFor(model => model.ClientPAN)
                            </dd>

                            <dt>
                                @Html.DisplayNameFor(model => model.Name)
                            </dt>

                            <dd>
                                @Html.DisplayFor(model => model.Name)
                            </dd>

                            <dt>
                                @Html.DisplayNameFor(model => model.Telephone)
                            </dt>

                            <dd>
                                @Html.DisplayFor(model => model.Telephone)
                            </dd>

                            <dt>
                                @Html.DisplayNameFor(model => model.Address)
                            </dt>

                            <dd>
                                @Html.DisplayFor(model => model.Address)
                            </dd>


                        </dl>
                    </div>



                </fieldset>
            </div>

        </div>
    </div>



</div>

<div id="DeleteModal" class="modal fade">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
                <h4 class="modal-title">Вы действительно хотите удалить этого клиента?</h4>
            </div>
            <div class="modal-body">


                <dl class="dl-horizontal">
                    <dt>
                        @Html.DisplayNameFor(model => model.ClientPAN)
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.ClientPAN)
                    </dd>

                    <dt>
                        @Html.DisplayNameFor(model => model.Name)
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.Name)
                    </dd>

                    <dt>
                        @Html.DisplayNameFor(model => model.Telephone)
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.Telephone)
                    </dd>

                    <dt>
                        @Html.DisplayNameFor(model => model.Address)
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.Address)
                    </dd>

                </dl>
            </div>



           
            <div class="modal-footer">
                @using (Html.BeginForm("Delete", "CustomerEnt", new { id = Model.ClientID }, FormMethod.Post))
            {
                    @Html.AntiForgeryToken()
                    <button type="button" class="btn btn-default" data-dismiss="modal">Закрыть</button>

                    <button type="submit" class="btn btn-danger">Удалить</button>

                }
            </div>
        </div>
        <!-- Футер модального окна -->


    </div>
</div>

<div id="EditModal" class="modal fade">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
                <h4 class="modal-title">Редактирование клиента</h4>
            </div>
            <div class="modal-body">
                <div class="container">
                    <div class="row">
                        <div class="col-xs-12 col-lg-6">
                            <fieldset>
                                @using (Html.BeginForm("Edit","CustomerEnt",FormMethod.Post))
                                {
                                    @Html.AntiForgeryToken()

                                    <div class="form-horizontal">
                                     
                                        @Html.HiddenFor(model => model.ClientID)



                                        <div class="form-group has-feedback">
                                            @Html.LabelFor(model => model.ClientPAN, htmlAttributes: new { @class = "control-label col-md-3" })
                                            <div class="col-md-7">
                                                @Html.EditorFor(model => model.ClientPAN, new { htmlAttributes = new { @class = "form-control", @required = "required", @pattern = "[0-9]{9,9}" } })
                                                <span class="glyphicon form-control-feedback"></span>
                                            </div>
                                        </div>

                                        <div class="form-group has-feedback">
                                            @Html.LabelFor(model => model.Name, htmlAttributes: new { @class = "control-label col-md-3" })
                                            <div class="col-md-7">
                                                @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control", @required = "required", @pattern = "[A-Za-zА-Яа-яЁё\\s0-9\"]{0,200}" } })
                                                <span class="glyphicon form-control-feedback"></span>
                                            </div>
                                        </div>

                                        <div class="form-group has-feedback">
                                            @Html.LabelFor(model => model.Telephone, htmlAttributes: new { @class = "control-label col-md-3" })
                                            <div class="col-md-7">
                                                @Html.EditorFor(model => model.Telephone, new { htmlAttributes = new { @class = "form-control", @pattern = "[0-9\\+]{0,20}" } })
                                                <span class="glyphicon form-control-feedback"></span>
                                            </div>
                                        </div>

                                        <div class="form-group has-feedback">
                                            @Html.LabelFor(model => model.Address, htmlAttributes: new { @class = "control-label col-md-3" })
                                            <div class="col-md-7">
                                                @Html.EditorFor(model => model.Address, new { htmlAttributes = new { @class = "form-control" }, @pattern = "[A-Za-zА-Яа-яЁё\\s]{0,200}" })
                                                <span class="glyphicon form-control-feedback"></span>
                                            </div>
                                        </div>


                                        <div class="modal-footer">
                                            <button type="button" class="btn btn-default" data-dismiss="modal">Закрыть</button>
                                            <button type="submit" class="btn btn-success">Сохранить</button>
                                        </div>
                                    </div>
                                }

                            </fieldset>
                        </div>
                        <div class="col-xs-0 col-lg-6"></div>

                    </div>

                </div>
            </div>
        </div>
    </div>
</div>
