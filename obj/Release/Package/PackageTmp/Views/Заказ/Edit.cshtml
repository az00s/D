@model D.Models.Заказ

@{
    ViewBag.Title = "Редактирование заказа";
}

<h3>Редактирование заказа</h3>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.ID_заказа)

        <div class="form-group">
            @Html.LabelFor(model => model.Дата_заказа, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.TextBox("Дата_заказа",Model.Дата_заказа.Value.ToShortDateString(), new { @class = "form-control" ,@readonly= "readonly" })
                @Html.ValidationMessageFor(model => model.Дата_заказа, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Сумма_заказа_с_НДС, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.TextBox("Сумма_заказа_с_НДС",Model.Сумма_заказа_с_НДС.Value.ToString("0.00"), new { @class = "form-control" , @readonly = "readonly" })
                @Html.ValidationMessageFor(model => model.Сумма_заказа_с_НДС, "", new { @class = "text-danger" })
            </div>
        </div>

        @*<div class="form-group">
            @Html.LabelFor(model => model.Статус_заказа, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.TextBox("Статус_заказа",Model.Статус_заказа,new { @class = "form-control" , @disabled = "disabled" })
                @Html.ValidationMessageFor(model => model.Статус_заказа, "", new { @class = "text-danger" })
            </div>
        </div>*@

        <div class="form-group">
            @Html.LabelFor(model => model.ID_клиента, "Клиент", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                <div class="indoorBtnDiv">
                    <input data-val="true" data-val-number="The field ID_клиента must be a number." data-val-required="Требуется поле ID_клиента." id="ID_клиента" name="ID_клиента" type="hidden" value="@Model.ID_клиента" />
                    <input id="indoorText" data-val="true" data-val-required="Требуется поле" name="Название организации" type="text" value="@Model.Клиент.Название_организации" readonly />
                    <input type="button" class="indoorBtn" id="btnAddClient" value="+">
                </div>
                @*@Html.DropDownList("ID_клиента", null, htmlAttributes: new { @class = "form-control" })*@
                @Html.ValidationMessageFor(model => model.ID_клиента, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Табельный_номер, "Сотрудник", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownList("Табельный_номер", null, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.Табельный_номер, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div id="button" class="col-md-offset-2 col-md-10"><input type="button" value="Добавить товар в заказ" class="btn btn-default" /></div>
        </div>

        <div class="test-border" id="AdGoods_div">

            <table class="table-bordered table-striped" id="AddGoods">
                <thead>
                    <tr>
                        <th>
                            @Html.Label("Обозначение")
                        </th>
                        <th>
                            @Html.Label("Наименование")
                        </th>
                        <th>
                            @Html.Label("Цена")
                        </th>
                        <th>
                            @Html.Label("Цена с НДС")
                        </th>
                        <th>
                            @Html.Label("Количество")
                        </th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    
                        @foreach (D.Models.Товар item in ViewBag.List)
                        {
                            <tr>
                                <td>
                                   <input type="hidden" name = "ID" value="@item.ID_товара"/>
                                    @Html.DisplayFor(modelItem => item.Обозначение)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Наименование)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Цена)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Цена_с_НДС)
                                </td>



                                <td>
                                    @Html.TextBox("Количество",item.Остаток_на_складе, new { @style =  "width:70px"  })
                                </td>
                                <td>
                                <a class="glyphicon glyphicon-remove" style="text-decoration:none;color:#E81C2C"></a>
                                </td>



                            </tr>
                        }

                </tbody>
            </table>

        </div>

        <div class="form-group" style="margin-top:30px;">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Сохранить" class="btn btn-success" />
            </div>
        </div>
    </div>
}

<div id="popupClients" class="popupContact">
    <a id="popupClientsClose" class="popupContactClose">x</a>

    @Html.Action("AllClients")
    <input type="submit" id="sidebtnC" class="sideButton" value="+" />

</div>
<div id="backgroundPopup" class="backgroundPopup"></div>



<div id="popupContact" class="popupContact">
    <a id="popupContactClose" class="popupContactClose">x</a>

    @Html.Action("AllGoods")
    <input type="submit" id="sidebtnG" class="sideButton" value="+" />

</div>
<div id="backgroundPopup" class="backgroundPopup"></div>


