@{ AjaxOptions ajaxOptions = new AjaxOptions
    {
        UpdateTargetId = "table",
        HttpMethod = "Post",
        LoadingElementId = "load",
        LoadingElementDuration = 1000
    };
}

<div id="box1" style="display: none" class="dontPrint">
    <img src="~/Content/loading.gif" id="load1" style="vertical-align: top;top:17px; left:-20px; position:absolute; display:none" />
    <div class="reportDate">
        @using (Ajax.BeginForm("ROrders", new AjaxOptions {UpdateTargetId = "table",HttpMethod = "Post",LoadingElementId = "load1",LoadingElementDuration = 1000}))
        {
            <p>
                Период с&nbsp;<input  type="text" class="datepicker" id="datetimepicker1" name="start" required/>&nbsp;по&nbsp;<input  type="text" class="datepicker" id="datetimepicker2" name="end" required/>&nbsp;<button type="submit" class="reportOrderBtn glyphicon glyphicon-chevron-right" @*id="button"*@ value="">

                </button>
            </p>
        }
    </div>
</div>

<div id="box" style="display: none" class="dontPrint">
    <img src="~/Content/loading.gif" id="load" style="vertical-align: top;top:17px; left:-20px; position:absolute; display:none" />
    <div class="indoorBtnDiv search">
        @using (Ajax.BeginForm("Search", ajaxOptions))
        {
            <input id="indoorText" data-val="true" data-val-required="Введите текст" name="search" type="text" data-provide="typeahead" data-autocomplete-source='@Url.Action("AutocompleteSearch", "Заказ")'/>
            <button type="submit" class="indoorBtn glyphicon glyphicon-search" id="button" value="Искать">@*<img src='~/Content/png/search.png' />*@</button>
        }
    </div>
</div>

<div id="sidebar-menu" class="sidebar-menu dontPrint navbar-collapse collapse" >
    <ul>
        <li class="fa fa-user collapse in">
            <a href=@Url.Action("Create") class="glyphicon glyphicon-plus">
                


            </a>
        </li>

        <li class="fa fa-cog collapse in">
            <a id="toggler" href="#" class="glyphicon glyphicon-search"></a>
        </li>
        <li class="fa fa-life-ring collapse in">


            <div id="dd" class="dropdown collapse in" tabindex="1">
                <a href="#"  id="tog" class="dropdown-toggle glyphicon glyphicon-list" data-toggle="dropdown"></a>
                <ul class="dropdown-menu sidebar-menu collapse">
                    <li><a id="toggler1" href="#">Отчет по заказам за период</a></li>
                </ul>
            </div>
        </li>

        <li>
            <a class="print dontPrint glyphicon glyphicon-print"></a>
        </li>

        <li>
            @Html.ActionLink(" ", "ExpExcl", null, new { @class = "glyphicon glyphicon-export" })
        </li>
    </ul>
</div>

<script>
    $(document).ready(function () {

        function openbox(id, toggler) {
            var div = document.getElementById(id);
            if (div.style.display == 'block') {
                div.style.display = 'none';
                toggler.style.background = 'none';
            }
            else {
                div.style.display = 'block';
                toggler.style.background = '#BC0000';
            }
        }
        document.getElementById('toggler1').onclick=function () {
            openbox('box1', document.getElementById('tog'));
            return false;
        };
    });
</script>

<script type="text/javascript">
    $(function () {
        $('#datetimepicker1').datetimepicker({
            locale: 'ru',
            pickTime: false,
            format: 'DD.MM.YYYY',
            useCurrent: false,
            language: 'ru',

        });

    });

    $(function () {
        $('#datetimepicker2').datetimepicker({
            locale: 'ru',
            pickTime: false,
            format: 'DD.MM.YYYY',
            useCurrent: false,
            language: 'ru',

        });

    });


    $.validator.addMethod('date',
            function (value, element) {
                var ok = true;
                try {
                    $.datepicker.parseDate('dd.mm.yy', value);
                }
                catch (err) {
                    ok = false;
                }
                return ok;
            });

</script>

